<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_nivel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"



        android:layout_marginStart="20dp"
        android:text="@string/nivel"



        />

    <ImageView
        android:id="@+id/iv_pref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_preferences"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:clickable="true"></ImageView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_centerVertical="true"
        android:orientation="horizontal"


        >





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100sp"
            android:text="00:00"
            android:id="@+id/tv_hm"
            tools:ignore="MissingConstraints"></TextView>

        <TextView
            android:id="@+id/tv_seg"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:text="00"
            android:textSize="50sp"
            tools:ignore="MissingConstraints"></TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#B5FAB8">
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/cb_nivel"
            android:padding="30sp">

        </CheckBox>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_horasdesp"
            android:hint="digite"
            android:inputType="numberDecimal"

            >


        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_atribuir"
            android:text="despertar"
            ></Button>


<ImageView
    android:id="@+id/iv_sair"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="20dp"
    android:src="@android:drawable/ic_menu_close_clear_cancel"
    ></ImageView>



    </LinearLayout>




</RelativeLayout>